---
import { Icon } from 'astro-icon/components';
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const title = `Request Received`;
---

<Layout metadata={{ title }}>
  <div class="grid items-center h-screen">
    <div class="text-center flex flex-col items-center gap-4">
      <Icon name="tabler:circle-check-filled" color="green" height={80} width={80} />
      <h1 class="text-4xl font-bold">Request Received</h1>
      <p class="text-lg">Thank you for contacting us. We will get back to you as soon as possible.</p>
      <a href={getHomePermalink()} class="btn mt-8">Back to homepage</a>
    </div>
  </div>
</Layout>
